{
  "name": "web3-login-demo",
  "version": "0.0.1",
  "description": "web3 login demo for KILT distillery",
  "main": "index.ts",
  "repository": "git@github.com:KILTprotocol/web3-login-demo.git",
  "author": "dudleyneedham <dudleyneedham1993@gmail.com>",
  "license": "BSD-4-Clause",
  "scripts": {
    "build": "npx tsc",
    "start": "concurrently \"yarn run server\" \"yarn run client\"",
    "server": "node dist/backend/server.js",
    "client": "cd ./src/frontend && yarn start",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\""
  },
  "dependencies": {
    "@kiltprotocol/sdk-js": "^0.29.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "concurrently": "^7.5.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.8.4"
  }
}